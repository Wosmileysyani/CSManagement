@model CSManagement.Models.ComputerEquipment

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="box box-default">
        <div class="box-header with-border">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="box-title">รายละเอียดข้อมูลครุภัณฑ์</h1>
                    <div style="float:right">
                        <a class="btn btn-warning" href="@Url.Action("Edit", "ComputerEquipments", new { id = Model.CE_ATNO })"><i class="fa fa-edit"></i> แก้ไขข้อมูล</a>
                        <a class="btn btn-danger" href="@Url.Action("Dispose", "Disposes", new { id = Model.CE_ATNO })"><i class="fa  fa-user-times"></i> จำหน่ายครุภัณฑ์</a>
                    </div>
                </div>
            </div>

        </div>

        <table id="w0" class="table table-striped table-bordered detail-view" style="font-size:20px">
            <tbody>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CE_NO)</th>
                    <td>@Html.DisplayFor(model => model.CE_NO)</td>
                </tr>

                <tr>
                    <th>@Html.DisplayNameFor(model => model.CE_DateIN)</th>
                    <td>@Html.DisplayFor(model => model.CE_DateIN)</td>
                </tr>

                <tr>
                    <th>@Html.DisplayNameFor(model => model.CE_Name)</th>
                    <td>@Html.DisplayFor(model => model.CE_Name)</td>
                </tr>

                <tr>
                    <th>@Html.DisplayNameFor(model => model.CE_Noce)</th>
                    <td>@Html.DisplayFor(model => model.CE_Noce)</td>
                </tr>

                <tr>
                    <th>@Html.DisplayNameFor(model => model.CE_Piece)</th>
                    <td>@Html.DisplayFor(model => model.CE_Piece)</td>
                </tr>

                <tr>
                    <th>@Html.DisplayNameFor(model => model.CE_Price)</th>
                    <td>@Html.DisplayFor(model => model.CE_Price)</td>
                </tr>

                <tr>
                    <th>@Html.DisplayNameFor(model => model.CE_PriceTotal)</th>
                    <td>@Html.DisplayFor(model => model.CE_PriceTotal)</td>
                </tr>

                <tr>
                    <th>@Html.DisplayNameFor(model => model.CE_Budget)</th>
                    <td>@Html.DisplayFor(model => model.CE_Budget)</td>
                </tr>

                <tr>
                    <th>@Html.DisplayNameFor(model => model.CE_Status)</th>
                    <td>@Html.DisplayFor(model => model.CE_Status)</td>
                </tr>

                <tr>
                    <th>@Html.DisplayNameFor(model => model.Teacher.Tea_Name)</th>
                    <td>@Html.DisplayFor(model => model.Teacher.Tea_Name)</td>
                </tr>
            </tbody>
        </table>
    </div>
</section>

