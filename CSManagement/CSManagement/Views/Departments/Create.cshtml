@model CSManagement.Models.Department

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title" style="font-family: 'Kanit', sans-serif">เพิ่มข้อมูลรายวิชา</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="row">
                    <div class="col-lg-4">
                        @Html.LabelFor(model => model.Dep_CourseID,"ชื่อหลักสูตร", htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownList("Dep_CourseID", null, "กรุณาเลือกหลักสูตร", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Dep_CourseID, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-lg-4">
                        @Html.LabelFor(model => model.Dep_Name, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Dep_Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Dep_Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-lg-4">
                        @Html.LabelFor(model => model.Dep_Credit, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Dep_Credit, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Dep_Credit, "", new { @class = "text-danger" })
                    </div>
                </div>
                <hr />
                <div class="text-center">
                    <button type="submit" class="btn btn-success col-lg-3" style="float:right;font-size:15px"><i class="fa fa-save"></i> บันทึกข้อมูล</button>
                    <a class="btn btn-default col-lg-3" style="float:left;font-size:15px" href="@Url.Action("Index", "Departments")"><i class="fa fa-mail-reply "></i> ย้อนกลับ</a>
                </div>
            </div>
        </div>
    </section>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
