@model IEnumerable<CSManagement.Models.Project>

@{

    ViewBag.Title = "วิทยาการคอมพิวเตอร์";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<body>
    <section class="content">
        <div class="box-default">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img src="~/imgSlideShow/present1.png" style="width:100%;height:100%">
                    </div>

                    <div class="item">
                        <img src="~/img/h1.jpg" style="width:100%;height:100%">
                    </div>

                    <div class="item">
                        <img src="~/img/h4.jpg" style="width:100%;height:100%">
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <div class="box-default">
            <div class="card-body">
                <div class="row" style="padding:15px">
                    <div class="card col-lg-3">
                        <img src="~/img/logo1.png" style="width:100%;box-shadow: 5px 5px 5px #d9d9d9" />
                    </div>

                    <div class="card col-lg-3">
                        <img src="~/img/logo2.png" style="width:100%;box-shadow: 5px 5px 5px #d9d9d9">
                    </div>

                    <div class="card col-lg-3">
                        <img src="~/img/logo3.png" style="width:100%;box-shadow: 5px 5px 5px #d9d9d9">
                    </div>

                    <div class="card col-lg-3">
                        <a href="http://register.kru.ac.th/reg/"><img src="~/img/logo4.png" style="width:100%;box-shadow: 5px 5px 5px #d9d9d9" /></a>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="panel panel-default outer" style="width:100%">
                        <div class="panel-heading headerbar outer" style="margin: 0px 100px 10px 0px">
                            <p style="font-size:25px;text-align:center;color:black"><strong>สัดส่วนหลักสูตรสาขา</strong></p>
                        </div>
                        <div class="panel-body text-justify chart-responsive">
                            <div class="chart" id="chartContainer" style="height: 300px; position: relative;"></div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="panel panel-default outer col-md-6" style="width:100%">
                        <div class="panel-heading headerbar">
                            <p style="font-size:25px;text-align:center;color:black"><strong>สัดส่วนการเข้าทำงานของศิษย์เก่า</strong></p>
                        </div>
                        <div class="panel-body text-justify chart-responsive">
                            <div class="chart" id="chartContainer2" style="height: 300px; position: relative;"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
<script type="text/javascript">
    window.onload = function () {
        var chart =
            new CanvasJS.Chart("chartContainer", {
                theme: "light2",
                exportEnabled: true,
                animationEnabled: true,
                data: [
                    {
                        type: "pie", //change type to bar, line, area, pie, etc
                        startAngle: 180,
                        toolTipContent: "<b>{label}</b>: {y}%",
                        indexLabel: "{label} {y}%",
                        dataPoints: @Html.Raw(ViewBag.DataPoints)
    }
        ]
            });
    var chart2 =
        new CanvasJS.Chart("chartContainer2", {
            theme: "light2",
            exportEnabled: true,
            animationEnabled: true,
            data: [
                {
                    type: "pie", //change type to bar, line, area, pie, etc
                    startAngle: 180,
                    toolTipContent: "<b>{label}</b>: {y}%",
                    indexLabel: "{label} {y}%",
                    dataPoints: @Html.Raw(ViewBag.DataPoints2)
                    }
                ]
            });
    chart.render();
    chart2.render();
    };
</script>