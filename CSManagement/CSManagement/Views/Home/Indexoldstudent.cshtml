
@{
    ViewBag.Title = "Indexoldstudent";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    int i = 1;
}
<head>
    <style>
        .contentpage {
            min-height: 250px;
            padding: 10px;
            margin-right: auto;
            margin-left: auto;
            padding-left: 30px;
            padding-right: 30px;
            background-color: white;
        }

        .header1 {
            border-bottom: 2px solid #207016;
        }

        .page-title {
            color: #fff;
            padding: 6px 12px;
            display: inline-block;
            font-size: 20px;
            margin-bottom: 0px;
            padding-bottom: 15px;
            background-color: #207016;
    </style>
</head>

<body>
    <section class="contentpage">
        <header class="header1">
            <h1 class="page-title">สัดส่วนการทำงานของศิษย์เก่า</h1>
        </header>
        <br />
        <div class="row">
            <table id="example1" class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th style="text-align:center">ที่</th>
                        <th style="text-align:center">ชื่อ-นามสกุล</th>
                        <th style="text-align:center">ประกอบอาชีพ</th>
                        <th style="text-align:center">ตำแหน่ง</th>
                        <th style="text-align:center">บริษัท/หน่วยงาน</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="text-align:center">@(i++)</td>
                        <td style="text-align:center"></td>
                        <td style="text-align:center"></td>
                        <td style="text-align:center"></td>
                        <td style="text-align:center"></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>
</body>

<link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/responsive.bootstrap.min.css" rel="stylesheet" />
@section Scripts{
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.responsive.min.js"></script>
    <script src="~/Scripts/DataTables/responsive.bootstrap.min.js"></script>
    <script type="text/javascript">
        $(function () {

            $('body').on('click', '.modal-link', function (e) {
                e.preventDefault();

                $("#modal-container").remove();

                $.get($(this).data("targeturl"), function (data) {

                    $('<div id="modal-container" class="modal fade" role="dialog">' +
                        '<div class="modal-dialog">' +
                        '<div class="modal-content" id= "modalbody" >' +
                        data + '</div></div>').modal();

                });
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            $('#example1').DataTable({
                scrollCollapse: true,
                "paging": false,
                autoWidth: false,
                responsive: true,
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.10.19/i18n/Thai.json",
                    searchPlaceholder: "ค้นหาข้อมูล"
                },
                columnDefs: [{
                    targets: "datatable-nosort",
                    orderable: false
                }]
            });
        });
    </script>
}