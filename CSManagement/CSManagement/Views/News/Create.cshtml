@model CSManagement.Models.News

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">เพิ่มข้อมูลข่าวสาร</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body" style="font-size:15px">
                <div class="row">
                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.New_Name, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.New_Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.New_Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.New_Date, htmlAttributes: new { @class = "control-label" })
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <input type="text" id="newdate" name="newdate" class="form-control" data-inputmask="'alias': 'dd-mm-yyyy'" data-mask>
                        </div>
                    </div>

                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.New_Img, htmlAttributes: new { @class = "control-label" })
                        <input type="file" id="file" name="file">
                    </div>

                    <div class="form-group col-md-12">
                        @Html.LabelFor(model => model.New_Details, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.New_Details, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.New_Details, "", new { @class = "text-danger" })
                    </div>
                </div>

                <hr />
                <div class="text-center">
                    <button type="submit" class="btn btn-success col-md-3" style="float:right;font-size:18px"><i class="fa fa-save"></i> บันทึกข้อมูล</button>
                    <a class="btn btn-default col-md-3" style="float:left;font-size:18px" href="@Url.Action("Index", "News")"><i class="fa fa-mail-reply"></i> ย้อนกลับ</a>
                </div>
            </div>
        </div>
    </section>
}
