
@{
    ViewBag.Title = "IndexUser";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<head>
    <style>
        .outer {
            padding: 1em 1em;
            box-shadow: 5px 5px 5px #d9d9d9;
        }

        .header1 {
            border-bottom: 2px solid #207016;
        }

        .page-title {
            color: #fff;
            padding: 6px 12px;
            display: inline-block;
            font-size: 20px;
            margin-bottom: 0px;
            padding-bottom: 15px;
            background-color: #207016;
        }
    </style>
</head>

<body>
    <section class="content" style="background-color:white">
        <div class="row">
            <div class="col-lg-4 col-md-12 col-sm-12">
                <header class="header1">
                    <h1 class="page-title">ข่าวประชาสัมพันธ์</h1>
                </header>
                <br />

                <div class="panel panel-default outer" style="width:100%">
                    @{
                        foreach (var item in ViewBag.NewsCount)
                        {
                            <img src="~/img/@item.New_Img" style="width:100%" />
                            <strong>@item.New_Name</strong>
                            <a href="@Url.Action("IndexUser","News")?id=@item.New_ID">[อ่านต่อ]</a><br />
                        }
                    }
                </div>
            </div>

            <div class="col-lg-8 col-md-12 col-sm-12">
                @foreach (var item in ViewBag.News)
                {
                    <strong><p style="text-align:center;font-size:25px">@item.New_Name</p></strong><br />
                    <img src="~/img/@item.New_Img" style="width:100%;height:300px" /><br />
                    <strong>วันที่ : </strong>;@item.New_Date.ToString("dd MMM yyyy")<br />
                    <strong>รายละเอียด : </strong>@item.New_Details<br />
                }
            </div>
        </div>
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
    </section>
</body>
