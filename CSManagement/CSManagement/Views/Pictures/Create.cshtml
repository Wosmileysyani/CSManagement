@model CSManagement.Models.Picture

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "Pictures", FormMethod.Post, new { enctype = "multipart/form-data", accept_charset = "utf-8" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title" style="font-family: 'Kanit', sans-serif">เพิ่มรูปภาพ</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body" style="font-size:15px">
                <div class="row">
                    <div class="form-group col-lg-4">
                        @Html.LabelFor(model => model.Pic_Name, "คำอธิบายรูปภาพ", htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Pic_Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Pic_Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-lg-4">
                        @Html.LabelFor(model => model.Pic_Link, "ลิ้งค์ของรูปภาพ", htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Pic_Link, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Pic_Link, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-lg-4">
                        @Html.LabelFor(model => model.Pic_Img, "เลือกรูปภาพ", htmlAttributes: new { @class = "control-label" })
                        <input type="file" id="file" name="file">
                    </div>
                </div>

                <hr />
                <div class="text-center">
                    <button type="submit" class="btn btn-success col-lg-3" style="float:right;font-size:15px"><i class="fa fa-save"></i> บันทึกข้อมูล</button>
                    <a class="btn btn-default col-lg-3" style="float:left;font-size:15px" href="@Url.Action("Index", "Pictures")"><i class="fa fa-mail-reply "></i> ย้อนกลับ</a>
                </div>
            </div>
        </div>
    </section>
}
