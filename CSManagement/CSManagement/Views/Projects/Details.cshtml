@model CSManagement.Models.Project_View

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="box box-default">
        <div class="box-header with-border">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="box-title" style="font-family: 'Kanit', sans-serif">รายละเอียดข้อมูลปริญญานิพนธ์</h1>
                    <div style="float:right">
                        <a class="btn btn-default" href="@Url.Action("Index", "Projects")"><i class="fa fa-mail-reply"></i> ย้อนกลับ</a>
                        @if (ViewBag.NameList == null)
                        {
                            if (Session["UserID"].ToString() == @Model.Stud_ID)
                            {
                                <a class="btn btn-warning" href="@Url.Action("Edit", "Projects", new {id = Model.Pj_ID})"><i class="fa fa-edit"></i>แก้ไขข้อมูล</a>
                            }
                            if (Session["AJ"] != null)
                            {
                                <a class="btn btn-warning" href="@Url.Action("Edit", "Projects", new {id = Model.Pj_ID})"><i class="fa fa-edit"></i>แก้ไขข้อมูล</a>
                            }
                        }
                        else
                        {
                            var name = Session["UserID"].ToString();
                            foreach (var item in ViewBag.NameList)
                            {
                                if (name.Equals(item.Stud_ID))
                                {
                                    <a class="btn btn-warning" href="@Url.Action("Edit", "Projects", new {id = @item.Pj_ID})"><i class="fa fa-edit"></i>แก้ไขข้อมูล</a>
                                    <a class="btn btn-warning" href="@Url.Action("AddStu", "Projects", new {id = @item.Pj_ID})"><i class="fa fa-edit"></i>เพิ่มนักศึกษา</a>
                                    <a class="btn btn-warning" href="@Url.Action("AddTea", "Projects", new {id = @item.Pj_ID})"><i class="fa fa-edit"></i>เพิ่มอาจาร์ยที่ปรึกษา</a>
                                }

                                if (Session["AJ"] != null)
                                {
                                    <a class="btn btn-warning" href="@Url.Action("Edit", "Projects", new {id = @item.Pj_ID})"><i class="fa fa-edit"></i>แก้ไขข้อมูล</a>
                                }
                            }
                        }
                    </div>
                </div>
            </div>

        </div>

        <div class="box-body">
            <table id="w0" class="table table-striped table-bordered detail-view" style="font-size: 18px">
                @if (ViewBag.ProList != null)
                {
                    <tbody>
                        @foreach (var item in @ViewBag.ProList)
                        {
                            foreach (var name in @ViewBag.NameList)
                            {
                                <tr>
                                    <th width="200px">รหัสนักศึกษา</th>
                                    <td>@name.Stud_ID</td>
                                </tr>

                                <tr>
                                    <th>ชื่อนักศึกษา</th>
                                    <td>@name.Stu_Title@name.Stu_Name @name.Stu_Surname</td>
                                </tr>
                            }

                            foreach (var name in @ViewBag.TeaName)
                            {
                                <tr>
                                    <th>อาจารย์ที่ปรึกษา</th>
                                    <td>@name.Title_Name@name.Tea_Name @name.Tea_Surname</td>
                                </tr>
                            }

                            <tr>
                                <th>ชื่อภาษาไทย</th>
                                <td>@item.Pj_NameTH</td>
                            </tr>

                            <tr>
                                <th>ชื่อภาษาอังกฤษ</th>
                                <td>@item.Pj_NameENG</td>
                            </tr>

                            <tr>
                                <th>วันที่อัพโหลด</th>
                                <td>@item.Pj_Date</td>
                            </tr>

                            <tr>
                                <th>ประเภท</th>
                                <td>@item.Pj_TypePj</td>
                            </tr>

                            <tr>
                                @if (item.Pj_File == null)
                                {
                                    <th>ไฟล์</th>
                                    <td>ไม่ได้ใส่ไว้</td>
                                }
                                else
                                {
                                    <th>ไฟล์</th>

                                    <td>
                                        <a class="btn btn-info" target="_blank" href="@Url.Action("forpdfview", "Projects")?id=@item.Pj_File"><i class="fa fa-file-text-o"></i> อ่านงานวิจัย</a>
                                        <a class="btn btn-success" target="_blank" href="@Url.Action("DownloadPdf", "Projects")?id=@item.Pj_File"><i class="fa fa-download"></i> ดาวน์โหลดไฟล์งาน</a>
                                    </td>
                                }

                            </tr>

                            <tr>
                                @if (item.Pj_Github == null)
                                {
                                    <th>Github</th>
                                    <td>ไม่ได้ใส่ไว้</td>
                                }
                                else
                                {
                                    <th>Github</th>
                                    <td><a class="btn btn-warning" target="_blank" href=@item.Pj_Github><i class="fa fa-globe"></i> ดูเว็บไซต์</a></td>
                                }
                            </tr>

                            <tr>
                                @if (item.Pj_Linkweb == null)
                                {
                                    <th>ลิงค์เว็บไซต์</th>
                                    <td>ไม่ได้ใส่ไว้</td>
                                }
                                else
                                {
                                    <th>ลิงค์เว็บไซต์</th>
                                    <td><a class="btn btn-warning" target="_blank" href="@item.Pj_Linkweb"><i class="fa fa-globe"></i> ดูเว็บไซต์</a></td>
                                }
                            </tr>

                            <tr>
                                @if (item.Pj_Video == null)
                                {
                                    <th>
                                        วิดีโอ
                                    </th>

                                    <td>
                                        ไม่ได้ใส่ไว้
                                    </td>
                                }
                                else
                                {
                                    <th>
                                        วิดีโอ
                                    </th>

                                    <td>
                                        <a class="btn_4 video-btn" alt="video" data-toggle="modal" data-src="https://www.facebook.com/plugins/video.php?href=https://web.facebook.com/kru.cs/videos/@item.Pj_Video/" data-target="#myModal">
                                            วิดีโอ
                                        </a>
                                    </td>
                                }
                            </tr>

                            <tr>
                                <th>รายละเอียด</th>
                                <td>@item.Pj_Description</td>
                            </tr>
                            break;
                        }

                    </tbody>
                }
                else
                {
                    <tbody>
                        <tr>
                            <th width="200px">รหัสนักศึกษา</th>
                            <td>@Model.Stud_ID</td>
                        </tr>

                        <tr>
                            <th>ชื่อนักศึกษา</th>
                            <td>@Model.Stu_Title@Model.Stu_Name @Model.Stu_Surname</td>
                        </tr>

                        <tr>
                            <th>อาจารย์ที่ปรึกษา</th>
                            <td>@Model.Title_Name@Model.Tea_Name @Model.Tea_Surname</td>
                        </tr>

                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Pj_NameTH)</th>
                            <td>@Html.DisplayFor(model => model.Pj_NameTH)</td>
                        </tr>

                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Pj_NameENG)</th>
                            <td>@Html.DisplayFor(model => model.Pj_NameENG)</td>
                        </tr>

                        <tr>
                            <th>วันที่อัพโหลด</th>
                            <td>@Html.DisplayFor(model => model.Pj_Date)</td>
                        </tr>

                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Pj_TypePj)</th>
                            <td>@Html.DisplayFor(model => model.Pj_TypePj)</td>
                        </tr>

                        <tr>
                            @if (@Model.Pj_File == null)
                            {
                                <th>@Html.DisplayNameFor(model => model.Pj_File)</th>
                                <td>ไม่ได้ใส่ไว้</td>
                            }
                            else
                            {
                                <th>@Html.DisplayNameFor(model => model.Pj_File)</th>

                                <td>
                                    <a class="btn btn-info" target="_blank" href="@Url.Action("forpdfview", "Projects")?id=@Model.Pj_File"><i class="fa fa-file-text-o"></i> อ่านงานวิจัย</a>
                                    <a class="btn btn-success" target="_blank" href="@Url.Action("DownloadPdf", "Projects")?id=@Model.Pj_File"><i class="fa fa-download"></i> ดาวน์โหลดไฟล์งาน</a>
                                </td>
                            }

                        </tr>

                        <tr>
                            @if (@Model.Pj_Github == null)
                            {
                                <th>@Html.DisplayNameFor(model => model.Pj_Github)</th>
                                <td>ไม่ได้ใส่ไว้</td>
                            }
                            else
                            {
                                <th>@Html.DisplayNameFor(model => model.Pj_Github)</th>
                                <td><a class="btn btn-warning" target="_blank" href=@Model.Pj_Github><i class="fa fa-globe"></i> ดูเว็บไซต์</a></td>
                            }
                        </tr>

                        <tr>
                            @if (@Model.Pj_Linkweb == null)
                            {
                                <th>@Html.DisplayNameFor(model => model.Pj_Linkweb)</th>
                                <td>ไม่ได้ใส่ไว้</td>
                            }
                            else
                            {
                                <th>@Html.DisplayNameFor(model => model.Pj_Linkweb)</th>
                                <td><a class="btn btn-warning" target="_blank" href="@Model.Pj_Linkweb"><i class="fa fa-globe"></i> ดูเว็บไซต์</a></td>
                            }
                        </tr>

                        <tr>
                            @if (@Model.Pj_Video == null)
                            {
                                <th>
                                    @Html.DisplayNameFor(model => model.Pj_Video)
                                </th>

                                <td>
                                    ไม่ได้ใส่ไว้
                                </td>
                            }
                            else
                            {
                                <th>
                                    @Html.DisplayNameFor(model => model.Pj_Video)
                                </th>

                                <td>
                                    <a class="btn_4 video-btn" alt="video" data-toggle="modal" data-src="https://www.facebook.com/plugins/video.php?href=https://web.facebook.com/kru.cs/videos/@Model.Pj_Video/" data-target="#myModal">
                                        วิดีโอ
                                    </a>
                                </td>
                            }
                        </tr>

                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Pj_Description)</th>
                            <td>@Html.DisplayFor(model => model.Pj_Description)</td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
    </div>
</section>

<!-- Modal Video -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="modelClose">
                    <span aria-hidden="true">&times;</span>
                </button>
                <!-- 16:9 aspect ratio -->
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item" id="videos" scrolling="no" src="" allowscriptaccess="always" allowFullScreen="true"></iframe>
                </div>

            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        // Gets the video src from the data-src on each button

        var $videoSrc;
        $('.video-btn').click(function () {
            $videoSrc = $(this).data("src");
            $("#videos").attr('src', $videoSrc);
        });
        // when the modal is opened autoplay it
        //$('#myModal').on('shown.bs.modal', function () {
        //})

        // stop playing the youtube video when I close the modal
        $('#myModal').on('hide.bs.modal', function () {
            // a poor man's stop video
            $("#videos").attr('src', $videoSrc);
        })

        $('#modelClose').click(function () {
            $("#videos").attr('src', $videoSrc);
        });
        // document ready
    });

</script>