@model CSManagement.Models.Register_SC

@{
    ViewBag.Title = "Registers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "Register_SC", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <span style="font-size: larger">ใบสมัครคอร์ส @ViewBag.Gen_SCID</span>
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title" style="font-family: 'Kanit', sans-serif">เพิ่มข้อมูลการสมัครอบรม</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body" style="font-size:15px">
                <div class="row">
                    <div class="form-group  col-md-4">
                        @Html.LabelFor(model => model.REG_IDCard, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.REG_IDCard, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.REG_IDCard, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group  col-md-4">
                        @Html.LabelFor(model => model.REG_Name, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.REG_Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.REG_Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group  col-md-4">
                        @Html.LabelFor(model => model.REG_Tel, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.REG_Tel, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.REG_Tel, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class="form-group  col-md-8">
                        @Html.LabelFor(model => model.REG_Address, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.REG_Address, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.REG_Address, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group  col-md-4">
                        @Html.LabelFor(model => model.REG_Email, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.REG_Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.REG_Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <hr />
                <div class="text-center">
                    <button type="submit" class="btn btn-success col-md-3" style="float:right;font-size:18px"><i class="fa fa-save"></i> บันทึกข้อมูล</button>
                    <a class="btn btn-default col-md-3" style="float:left;font-size:18px" href="@Url.Action("Index", "Register_SC")"><i class="fa fa-mail-reply "></i> ย้อนกลับ</a>
                </div>
            </div>
        </div>
    </section>
}
