@model CSManagement.Models.School

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">เพิ่มข้อมูลโรงเรียน</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body" style="font-size:15px">
                <div class="row">
                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.SCH_Name, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.SCH_Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SCH_Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.SCH_Province, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.SCH_Province, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SCH_Province, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.SCH_Tel, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.SCH_Tel, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SCH_Tel, "", new { @class = "text-danger" })
                    </div>

                    <hr />
                    <div class="text-center">
                        <button type="submit" class="btn btn-success col-lg-3" style="float:right;font-size:15px"><i class="fa fa-save"></i> บันทึกข้อมูล</button>
                        <a class="btn btn-default col-lg-3" style="float:left;font-size:15px" href="@Url.Action("Index", "Pictures")"><i class="fa fa-mail-reply "></i> ย้อนกลับ</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
