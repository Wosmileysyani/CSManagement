@using Microsoft.Ajax.Utilities
<header class="main-header">
    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        .topnav {
            background-color: #333;
        }

            .topnav a {
                color: #f2f2f2;
                text-align: center;
                padding: 14px 16px;
            }

                .topnav a:hover {
                    background-color: #ddd;
                    color: blue;
                }

                .topnav a.active {
                    background-color: #4CAF50;
                    color: white;
                }

        .topnav-right {
            float: right;
        }
    </style>

    @* BEGIN Logo *@
    <a href="@Url.Action("Index", "Home")" class="logo">
        @* Mini logo for sidebar 50x50 pixels *@
        <span class="logo-mini"><b>C</b>S</span>
        @* Logo for regular state and mobile devices *@
        <span class="logo-lg"><b>ComSci-</b>CS</span>
    </a>
    @* END Logo *@
    @* BEGIN Header *@
    <nav class="navbar navbar-static-top topnav" role="navigation">
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        @{
            if (Session["UserID"] != null)
            {
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="~/img/icons8-cat-profile-64.png" class="user-image" alt="User Image">
                                <span class="hidden-xs">@Session["UserName"].ToString() @Session["UserSurname"].ToString()</span>
                            </a>

                            <ul class="dropdown-menu">
                                <li class="user-header">
                                    <img src="~/img/icons8-cat-profile-64.png" class="img-circle" alt="User Image">

                                    <p>
                                        @Session["UserName"].ToString()
                                        @Session["UserSurname"].ToString()
                                        <small>@Session["UserID"].ToString()</small>
                                    </p>
                                </li>

                                <li class="user-footer">
                                    @if (Session["AJ"] == null)
                                    {
                                        <div class="pull-left">
                                            <a href='@Url.Action("Edit", "Students", new {id = Session["UserID"].ToString()})' class="btn btn-default btn-flat">Profile</a>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="pull-left">
                                            <a href='@Url.Action("Edit", "Teachers", new {id = Session["UserID"].ToString()})' class="btn btn-default btn-flat">Profile</a>
                                        </div>
                                    }
                                    <div class="pull-right">
                                        <a href='@Url.Action("Logout", "logins")' class="btn btn-default btn-flat">Sign out</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            }

            else
            {
                <div class="topnav-right">
                    <a href="" class="btn btn-blue" data-toggle="modal" data-target="#modalLRForm">
                        เข้าสู่ระบบ/สมัครสมาชิก
                    </a>
                </div>
            }

        }
    </nav>
</header>