@model IEnumerable<CSManagement.Models.Short_Course>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 1;
}

<section class="content">
    <div class="box box-default">
        <div class="box-header with-border">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="box-title">จัดการข้อมูลหลักสูตรอบรม</h1>
                    <div style="float:right">
                        <a class="btn btn-success" href="@Url.Action("Create", "Short_Course")"><i class="fa fa-plus"></i> เพิ่มข้อมูลหลักสูตร</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th style="text-align:center">ที่</th>
                        <th style="text-align:center">ชื่อหลักสูตรอบรม</th>
                        <th style="text-align:center">จัดการข้อมูล</th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center">@(i++)</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SC_NameTH)
                            </td>
                            <td style="text-align:center">
                                <a class="btn btn-warning" href="@Url.Action("Edit", "Short_Course", new { id = item.SC_ID })"><i class="fa fa-edit"></i>แก้ไข</a>
                                @*<a class="btn btn-info" href="@Url.Action("Details", "Short_Course", new { id = item.SC_ID })"><i class="fa fa-list-ul"></i> รายละเอียด</a>*@
                                <a class="btn btn-danger" href="@Url.Action("Delete", "Short_Course", new { id = item.SC_ID })"><i class="fa  fa-trash-o"></i> ลบ</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
