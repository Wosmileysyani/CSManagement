@model CSManagement.Models.Student

@{
    ViewBag.Title = "จัดการข้อมูลนักศึกษา";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">เพิ่มข้อมูลนักศึกษา</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="row">
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.Stu_ID, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Stu_ID, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Stu_ID, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.Stu_Title, htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownListFor(model => model.Stu_Title, new List<SelectListItem>()
                        {
                            new SelectListItem() { Text = "นาย", Value = "นาย" },
                            new SelectListItem() { Text = "นาง", Value = "นาง" },
                            new SelectListItem() { Text = "นางสาว", Value = "นางสาว"}
                        }, "โปรดเลือกคำนำหน้าชื่อ", new { @id = "Stu_Sex", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Stu_Title, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.Stu_Name, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Stu_Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Stu_Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.Stu_Surname,  htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Stu_Surname, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Stu_Surname, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-2">
                        @Html.LabelFor(model => model.Stu_Sex,  htmlAttributes: new { @class = "control-label" })
                        <br />
                            @Html.DropDownListFor(model => model.Stu_Sex, new List<SelectListItem>()
                            {
                                new SelectListItem() { Text = "เพศชาย", Value = "True" },
                                new SelectListItem() { Text = "เพศหญิง", Value = "False"}
                            }, "โปรดเลือกเพศ", new { @id = "Stu_Sex", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Stu_Sex, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.Stu_Birthday,  htmlAttributes: new { @class = "control-label" })<div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <input type="text" class="form-control" data-inputmask="'alias': 'dd/mm/yyyy'" data-mask>
                        </div>
                    </div>

                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.Stu_Email, htmlAttributes: new { @class = "control-label" })
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                            <input type="email" class="form-control" placeholder="Email">
                        </div>
                    </div>

                    <div class="form-group  col-md-3">
                        @Html.LabelFor(model => model.Stu_Tel,  htmlAttributes: new { @class = "control-label" })
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-phone"></i>
                            </div>
                            <input type="text" class="form-control" data-inputmask='"mask": "(999) 999-9999"' data-mask>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-12">
                        @Html.LabelFor(model => model.Stu_Address,  htmlAttributes: new { @class = "control-label" })
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-home"></i></span>
                            <input type="text" class="form-control">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.Stu_School,  htmlAttributes: new { @class = "control-label" })
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-university"></i></span>
                            @Html.DropDownList("Stu_School", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Stu_School, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.Stu_OldEdu,  htmlAttributes: new { @class = "control-label" })
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-graduation-cap"></i></span>
                            <select class="form-control select2" style="width: 100%;">
                                <option selected="selected">เลือกวุฒิการศึกษา</option>
                                <option>มัธยมปลาย(ม.6)</option>
                                <option>ปริญญาวิชาชีพ(ปวช.)</option>
                                <option>การศึกษานอกสถานที่(กศน.)</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.Stu_Img, htmlAttributes: new { @class = "control-label" })
                        <input type="file" id="exampleInputFile">
                    </div>
                </div>
                <button type="submit" class="btn btn-block btn-success col-md-4">บันทึกข้อมูล</button>
            </div>
        </div>

        <div class="box-footer">
            หมายเหตุ : กรุณาตรวจสอบข้อมูลให้ถูกต้องก่อนทำการกดบันทึก
        </div>
    </section>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
