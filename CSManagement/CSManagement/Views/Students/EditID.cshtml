@model CSManagement.Models.Login

@{
    ViewBag.Title = "เปลี่ยนรหัสผ่าน";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>เปลี่ยนรหัสผ่าน</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Log_ID)

    <div class="form-group">

        @Html.LabelFor(model => model.Log_Pass, "รหัสผ่าน", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Log_Pass, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Log_Pass, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="อัพเดต" class="btn btn-default" />
            </div>
        </div>
    </div>

    if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert(@ViewBag.Message);
            };
        </script>
    }
}

