@model CSManagement.Models.Teacher

@{;
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("Create",  "Teachers" ,FormMethod.Post, new { enctype="multipart/form-data", accept_charset="utf-8" }))
{
    @Html.AntiForgeryToken()
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">เพิ่มข้อมูลอาจารย์</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="row">
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.Tea_ID, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Tea_ID, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Tea_ID, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.Tea_TitleID, htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownList("Tea_TitleID", null, "เลือกคำนำหน้า",htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Tea_TitleID, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.Tea_Name, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Tea_Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Tea_Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.Tea_Surname, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Tea_Surname, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Tea_Surname, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.Tea_Birth, htmlAttributes: new { @class = "control-label" })
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <input type="text" id="birthday" name="birthday" class="form-control" data-inputmask="'alias': 'dd-mm-yyyy'" data-mask>
                        </div>
                    </div>

                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.Tea_Position, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Tea_Position, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Tea_Position, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.Tea_Program, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Tea_Program, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Tea_Program, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.Tea_Img, htmlAttributes: new { @class = "control-label" })
                        <input type="file" id="file" name="file">
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Tea_LvEdu, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Tea_LvEdu, new { htmlAttributes = new { @class = "form-control", rows="7"}})
                        @Html.ValidationMessageFor(model => model.Tea_LvEdu, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Tea_Export, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Tea_Export, new { htmlAttributes = new { @class = "form-control" , rows="7"}})
                        @Html.ValidationMessageFor(model => model.Tea_Export, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success col-lg-3" style="float:right;font-size:18px"><i class="fa fa-save"></i> บันทึกข้อมูล</button>
                    <a class="btn btn-default col-lg-3" style="float:left;font-size:18px" href="@Url.Action("Index", "Teachers")"><i class="fa fa-mail-reply "></i> ย้อนกลับ</a>
                </div>
            </div>
        </div>

        <div class="box-footer">
            หมายเหตุ : กรุณาตรวจสอบข้อมูลให้ถูกต้องก่อนทำการกดบันทึก
        </div>
    </section>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
