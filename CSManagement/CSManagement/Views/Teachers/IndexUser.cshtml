@model IEnumerable<CSManagement.Models.Teacher>

@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    int i = 1;
}
<head>
    <style>
        .outer {
            padding: 1em 1em;
            box-shadow: 5px 5px 5px #d9d9d9;
        }

        .headerbar {
            background: #feac28 !important;
            color: #ffffff !important;
            position: relative;
            margin-bottom: 0.5em;
            margin-right: -2.5em;
            margin-left: -2.5em;
            box-shadow: 5px 5px 5px #d9d9d9;
        }

            .headerbar:before {
                content: "";
                position: absolute;
                border-bottom: 0.5em solid #333;
                border-left: 1.5em solid transparent;
                left: 5px;
                top: -0.5em;
            }

            .headerbar:after {
                content: "";
                position: absolute;
                border-top: 0.5em solid #333;
                border-right: 1.5em solid transparent;
                right: 5px;
                bottom: -0.5em;
            }

            .headerbar:hover {
                transform: scale(1,1.1);
            }
    </style>
</head>

<body>
    <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default outer" style="width:100%">
                        <div class="panel-heading headerbar" style="text-align:center;font-size:20px">
                            บุคคลากรสาขาวิทยาการคอมพิวเตอร์
                        </div>
                        <div class="panel-body text-justify">
                            <table id="example1" class="table table-bordered table-striped" style="width:100%">
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th style="text-align:center">ชื่อ-นามสกุล</th>
                                            <td>@item.Title.Title_Name @item.Tea_Name @item.Tea_Surname</td>
                                        </tr>
                                        <tr>
                                            <th style="text-align:center">@Html.DisplayNameFor(model => model.Tea_Export)</th>
                                            <td>@Html.DisplayFor(modelItem => item.Tea_Export)</td>
                                        </tr>
                                        <tr>
                                            <th style="text-align:center">@Html.DisplayNameFor(model => model.Tea_Position)</th>
                                            <td>@Html.DisplayFor(modelItem => item.Tea_Position)</td>
                                        </tr>
                                        <tr>
                                            <th style="text-align:center">@Html.DisplayNameFor(model => model.Tea_Img)</th>
                                            <td class="text-center" style="padding:10px 10px 10px 10px"><img src="~/img/@item.Tea_Img" height="70" width="70" alt="Alternate Text" /></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
    </section>
</body>

<link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
@section Scripts{
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#example1').DataTable({
                scrollCollapse: true,
                autoWidth: false,
                responsive: true,
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.10.19/i18n/Thai.json"
                },
                columnDefs: [{
                    targets: "datatable-nosort",
                    orderable: false
                }]
            });
        });
    </script>
}
